// етот кфг в формате kdl : https://kdl.dev
// "/-" отрубает целый раздел.
// чекни вики чтобы сделать норм кфг братнчик:
// https://yalter.github.io/niri/Configuration:-Introduction

// конфинг дейвайсов ввода.
// все настройки на вики:
// https://yalter.github.io/niri/Configuration:-Input
input {
    keyboard {
        xkb {
            layout "us,ru"
            options "grp:alt_shift_toggle,compose:ralt,ctrl:yescaps"
        }

        // врубает намлок при старете (тип диод? я хз у меня ноут)
        // Раскоментируй чтобы убрать.
        numlock
    }

    // дальше описаны настройки libinput.
    // Omitting settings disables them, or leaves them at their default values.
    touchpad {
        // off
        tap
        // dwt
        // dwtp
        // drag false
        // drag-lock
        natural-scroll
        // accel-speed 0.2
        // accel-profile "flat"
        // scroll-method "two-finger"
        // disabled-on-external-mouse
    }

    mouse {
        // off
        // natural-scroll
        // accel-speed 0.2
        // accel-profile "flat"
        // scroll-method "no-scroll"
    }

    trackpoint {
        // off
        // natural-scroll
        // accel-speed 0.2
        // accel-profile "flat"
        // scroll-method "on-button-down"
        // scroll-button 273
        // scroll-button-lock
        // middle-emulation
    }

    // Раскоментируй чтобы твой курсор был в центре нового окна.
    // warp-mouse-to-focus

}

// Ты можешь настроить выходы (мониторы) по их название, которые можнно найти
// написав в терминале `niri msg outputs` пока нири запущен.
// Экран ноутбуков обычно называеться "eDP-1".
// больше инфы на вики:
// https://yalter.github.io/niri/Configuration:-Outputs
// Не забудь раскоментировать секцию, убравь /-
/-output "eDP-1" {
    // Раскоментируй чтобы отрубить этот выход
    // off

    // впиши в консось `niri msg outputs` и нири выдаст тебе возможны разрешение и герцовку.
    mode "1920x1080@120.030"

    // Также ты можешь поставить увелечение интерфейса, форматом 1.5 для 150%.
    scale 2

    // Можешь поменять орентацию экрана, варианты ниже:
    // normal, 90, 180, 270, flipped, flipped-90, flipped-180 and flipped-270.
    transform "normal"

    // тут ты пишешь где находиться твой экранчик, по кординатом.
    position x=1280 y=0
}

output "HDMI-A-1" {
   //mode "1920x1080@60.000"
    mode "1600x900@60.000"
   // mode "2560x1080@60.000"
    position x=-1366 y=0
}
// Настройки, влияющие на расположение и размер окон.
// Подробнее на вики:
// https://yalter.github.io/niri/Configuration:-Layout
layout {
    // Set gaps around windows in logical pixels.
    gaps 5
    background-color "transparent"

    // открытие окна по центру, если у тебя основное окно занимает всё место.
    center-focused-column "on-overflow"

    // Ты можешь изменить размер ширины окна при нажати (Mod+R)
    preset-column-widths {
        // "proportion" задаёт ширину окна с учётом рамок.
        proportion 0.33333
        proportion 0.5
        proportion 0.66667

        // Исправить длину можео в пиксилях
        // fixed 1920
    }

    // Также ты можешь менять высоту (Mod+Shift+R)
    // preset-window-heights { }

    // Ниже дефолтная ширина окна.
    default-column-width { proportion 0.5; }
    // Если оставить пустое значение, то прилоение будет октрываться как оно само захочет
    // default-column-width {}

    // Настройки обводки у окна в фокусе.
    focus-ring {
        // off
        width 1
        active-color "#ffffff33"
    }

    // это просто рамка, она видна всегда, не то что фокуная рамка
    // (в оригинале там ring, но я переводил рамка чтобы было понятнее)
    border {
        // настройки идентичны как у фокусной рамки.
        // врубая border, тебе надо выключить focus ring.
        off

        width 1
        active-color "#555"
        inactive-color "#222"

        // цвет рамки у окна коотрые завликает твоё внимание
        urgent-color "#9b0000"
    }

    // ты можешь врубить тень для окон.
    shadow {
        // Раскоментируй чтобы врубит тени.
        on

        // Softness controls the shadow blur radius.
        softness 20

        // Spread expands the shadow.
        spread 5

        // Offset moves the shadow relative to the window.
        offset x=0 y=5

        // цвет
        color "#0007"
    }

    tab-indicator {
        width 2
        gap -5
        gaps-between-tabs 5
        corner-radius 10
        active-color "#fff"
        inactive-color "#ffffff55"
    }

    insert-hint {
        color "#ffffff22"
    }

    // даёт пространство для shell или waybar
    struts {
        // left 64
        // right 64
        // top 64
        bottom 4
    }
}

