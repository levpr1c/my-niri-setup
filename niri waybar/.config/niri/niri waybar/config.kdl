input {
    keyboard {
        xkb {
            layout "us,ru"
            options "grp:alt_shift_toggle,compose:ralt,ctrl:yescaps"
        }
        numlock
    }

    touchpad {
        // off
        tap
        // dwt
        // dwtp
        // drag false
        // drag-lock
        natural-scroll
        // accel-speed 0.2
        // accel-profile "flat"
        // scroll-method "two-finger"
        // disabled-on-external-mouse
    }

    mouse {
        // off
        // natural-scroll
        // accel-speed 0.2
        // accel-profile "flat"
        // scroll-method "no-scroll"
    }

    trackpoint {
        // off
        // natural-scroll
        // accel-speed 0.2
        // accel-profile "flat"
        // scroll-method "on-button-down"
        // scroll-button 273
        // scroll-button-lock
        // middle-emulation
    }

    // warp-mouse-to-focus
    // focus-follows-mouse max-scroll-amount="0%"
}

/-output "eDP-1" {
    // off
    mode "1920x1080@120.030"
    // normal, 90, 180, 270, flipped, flipped-90, flipped-180 and flipped-270.
    transform "normal"
    position x=1280 y=0
}

output "HDMI-A-1" {
   //mode "1920x1080@60.000"
    mode "1600x900@60.000"
   // mode "2560x1080@60.000"
    position x=-1366 y=0
}

layout {
    /-blur {
      // on
      passes 4 // number of times to apply the blur effect
      radius 1 // radius of the blur effect
      noise 0.1 //add grain to the blur
    }
    // Set gaps around windows in logical pixels.
    gaps 8
    background-color "rgb(60, 56, 54)"
    center-focused-column "never"

    preset-column-widths { // Ты можешь изменить размер ширины окна при нажати (Mod+R)
        // например, ты можешь поместить на экране 4 окна, если их длина будет "0.25".
        // по дефолту это  1/3, 1/2 и 2/3 от экрана.
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width { proportion 0.5; }

    focus-ring {
        off
    }

    border {
        // off
        width 2
        active-color "#fe8019"
        inactive-color "#d65d0e"
        urgent-color "#9b0000"
    }

    shadow {
        on
        softness 30
        spread 5
        offset x=0 y=5
        color "#0007"
    }
}

prefer-no-csd

screenshot-path "~/Pictures/Screenshots/niri/Screenshot from %Y-%m-%d %H-%M-%S.png"

animations {
    // off
    slowdown 1.65
}

window-rule {
    geometry-corner-radius 10
    clip-to-geometry true
}

binds {
    // ========================= БАЗОВЫЕ СИСТЕМНЫЕ ФУНКЦИИ =========================

    Mod+Shift+Slash hotkey-overlay-title="Показать горячие клавиши" { show-hotkey-overlay; }

    Mod+Shift+E { quit; }
    Mod+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }
    Ctrl+Alt+Delete { spawn "nwg-bar"; }

    Mod+Shift+P { power-off-monitors; } // Выключить мониторы


    // ========================= ЗАПУСК ПРИЛОЖЕНИЙ =========================

    Mod+T hotkey-overlay-title="Термнал: ghostty" { spawn "ghostty"; }
    Mod+D hotkey-overlay-title="Лаучнер приложений : vicinae" { spawn-sh "vicinae toggle"; }
    Super+Alt+L hotkey-overlay-title="Заблокрировать экран: gtklock" { spawn "gtklock"; }
    Super+Alt+S allow-when-locked=true { spawn-sh "pkill orca || exec orca"; }
    Mod+Alt+I hotkey-overlay-title="Открытие файла настройки конфига niri" { spawn-sh "zeditor $HOME/.config/niri/config.kdl"; }


    // ========================= УПРАВЛЕНИЕ ГРОМКОСТЬЮ =========================

    XF86AudioRaiseVolume allow-when-locked=true { spawn "swayosd-client" "--output-volume" "5"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn "swayosd-client" "--output-volume" "-5"; }
    XF86AudioMute        allow-when-locked=true { spawn "swayosd-client" "--output-volume" "mute-toggle"; }
    XF86AudioMicMute     allow-when-locked=true { spawn "swayosd-client" "--input-volume" "mute-toggle"; }


    // ========================= УПРАВЛЕНИЕ ЯРКОСТЬЮ =========================

    XF86MonBrightnessUp allow-when-locked=true   { spawn "swayosd-client" "--brightness" "+5"; }
    XF86MonBrightnessDown allow-when-locked=true { spawn "swayosd-client" "--brightness" "-5"; }


    // ========================= УПРАВЛЕНИЕ ОКНАМИ — ФОКУС =========================

    Mod+O hotkey-overlay-title="Открыть обзор" repeat=false { toggle-overview; }
    Mod+Q hotkey-overlay-title="Закрыть оконо в фокусе" repeat=false { close-window; }

    Mod+Left  hotkey-overlay-title="Перенести фокус на окно слева"  { focus-column-left; }
    Mod+Down  hotkey-overlay-title="Перенести фокус на окно снизу"  { focus-window-down; }
    Mod+Up    hotkey-overlay-title="Перенести фокус на окно сверху" { focus-window-up; }
    Mod+Right hotkey-overlay-title="Перенести фокус на окно справа" { focus-column-right; }

    Mod+H { focus-column-left; }
    Mod+J { focus-window-down; }
    Mod+K { focus-window-up; }
    Mod+L { focus-column-right; }


    // ========================= УПРАВЛЕНИЕ ОКНАМИ — ПЕРЕМЕЩЕНИЕ =========================

    Mod+Ctrl+Left  hotkey-overlay-title="Перенести окно налево"  { move-column-left; }
    Mod+Ctrl+Down  hotkey-overlay-title="Перенести окно вниз"    { move-window-down; }
    Mod+Ctrl+Up    hotkey-overlay-title="Перенести окно наверх"  { move-window-up; }
    Mod+Ctrl+Right hotkey-overlay-title="Перенести окно направо" { move-column-right; }

    Mod+Ctrl+H { move-column-left; }
    Mod+Ctrl+J { move-window-down; }
    Mod+Ctrl+K { move-window-up; }
    Mod+Ctrl+L { move-column-right; }


    // ========================= НАВИГАЦИЯ ВНУТРИ КОЛОНКИ =========================

    Mod+Home        { focus-column-first; }
    Mod+End         { focus-column-last; }
    Mod+Ctrl+Home   { move-column-to-first; }
    Mod+Ctrl+End    { move-column-to-last; }


    // ========================= МОНИТОРЫ — ФОКУС И ПЕРЕМЕЩЕНИЕ =========================

    // Фокус между мониторами
    Mod+Shift+Left  { focus-monitor-left; }
    Mod+Shift+Down  { focus-monitor-down; }
    Mod+Shift+Up    { focus-monitor-up; }
    Mod+Shift+Right { focus-monitor-right; }

    Mod+Shift+H { focus-monitor-left; }
    Mod+Shift+J { focus-monitor-down; }
    Mod+Shift+K { focus-monitor-up; }
    Mod+Shift+L { focus-monitor-right; }

    // Перемещение колонок между мониторами
    Mod+Shift+Ctrl+Left  { move-column-to-monitor-left; }
    Mod+Shift+Ctrl+Down  { move-column-to-monitor-down; }
    Mod+Shift+Ctrl+Up    { move-column-to-monitor-up; }
    Mod+Shift+Ctrl+Right { move-column-to-monitor-right; }

    Mod+Shift+Ctrl+H { move-column-to-monitor-left; }
    Mod+Shift+Ctrl+J { move-column-to-monitor-down; }
    Mod+Shift+Ctrl+K { move-column-to-monitor-up; }
    Mod+Shift+Ctrl+L { move-column-to-monitor-right; }


    // ========================= РАБОЧИЕ ПРОСТРАНСТВА =========================

    // Навигация
    Mod+Page_Down { focus-workspace-down; }
    Mod+Page_Up   { focus-workspace-up; }
    Mod+U         { focus-workspace-down; }
    Mod+I         { focus-workspace-up; }
    Mod+Tab       { focus-workspace-previous; }

    // Перемещение колонок
    Mod+Ctrl+Page_Down { move-column-to-workspace-down; }
    Mod+Ctrl+Page_Up   { move-column-to-workspace-up; }
    Mod+Ctrl+U         { move-column-to-workspace-down; }
    Mod+Ctrl+I         { move-column-to-workspace-up; }

    // Перемещение рабочих пространств
    Mod+Shift+Page_Down { move-workspace-down; }
    Mod+Shift+Page_Up   { move-workspace-up; }
    Mod+Shift+U         { move-workspace-down; }
    Mod+Shift+I         { move-workspace-up; }


    // ========================= РАБОЧИЕ ПРОСТРАНСТВА ПО НОМЕРАМ =========================

    // Фокус
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }

    // Перемещение колонок
    Mod+Ctrl+1 { move-column-to-workspace 1; }
    Mod+Ctrl+2 { move-column-to-workspace 2; }
    Mod+Ctrl+3 { move-column-to-workspace 3; }
    Mod+Ctrl+4 { move-column-to-workspace 4; }
    Mod+Ctrl+5 { move-column-to-workspace 5; }
    Mod+Ctrl+6 { move-column-to-workspace 6; }
    Mod+Ctrl+7 { move-column-to-workspace 7; }
    Mod+Ctrl+8 { move-column-to-workspace 8; }
    Mod+Ctrl+9 { move-column-to-workspace 9; }


    // ========================= КОЛОНКИ И РАЗМЕРЫ =========================

    Mod+BracketLeft  { consume-or-expel-window-left; }
    Mod+BracketRight { consume-or-expel-window-right; }
    Mod+Comma        { consume-window-into-column; }
    Mod+Period       { expel-window-from-column; }

    Mod+R        { switch-preset-column-width; }
    Mod+Shift+R  { switch-preset-window-height; }
    Mod+Ctrl+R   { reset-window-height; }

    Mod+F        { maximize-column; }
    Mod+Shift+F  { fullscreen-window; }

    Mod+Ctrl+F { expand-column-to-available-width; }
    Mod+C      { center-column; }
    Mod+Ctrl+C { center-visible-columns; }

    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }

    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }


    // ========================= ПЛАВАЮЩИЕ ОКНА =========================

    Mod+V       { toggle-window-floating; }
    Mod+Shift+V { switch-focus-between-floating-and-tiling; }


    // ========================= РЕЖИМ ТАБОВ =========================

    Mod+W { toggle-column-tabbed-display; }


    // ========================= СКРИНШОТЫ =========================

    Print       { screenshot; }
    Ctrl+Print  { screenshot-screen; }
    Alt+Print   { screenshot-window; }


    // ========================= СКРОЛЛ-БИНДЫ =========================

    // Вертикальные перемещения
    Mod+WheelScrollDown      cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp        cooldown-ms=150 { focus-workspace-up; }
    Mod+Ctrl+WheelScrollDown cooldown-ms=150 { move-column-to-workspace-down; }
    Mod+Ctrl+WheelScrollUp   cooldown-ms=150 { move-column-to-workspace-up; }

    // Горизонтальные перемещения колонок
    Mod+WheelScrollRight      { focus-column-right; }
    Mod+WheelScrollLeft       { focus-column-left; }
    Mod+Ctrl+WheelScrollRight { move-column-right; }
    Mod+Ctrl+WheelScrollLeft  { move-column-left; }

    // Shift — горизонтальный скролл
    Mod+Shift+WheelScrollDown      { focus-column-right; }
    Mod+Shift+WheelScrollUp        { focus-column-left; }
    Mod+Ctrl+Shift+WheelScrollDown { move-column-right; }
    Mod+Ctrl+Shift+WheelScrollUp   { move-column-left; }

}


